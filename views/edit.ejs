<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Dark Mode Styles */
    body.dark-mode {
      background-color: #1a202c; /* Dark background */
      color: #e2e8f0; /* Light text color */
    }
    body.dark-mode .bg-white {
      background-color: #2d3748; /* Darker background for form */
    }
    body.dark-mode .text-gray-700 {
      color: #edf2f7; /* Light text color for labels */
    }

    /* Light Mode Styles */
    body {
      color: #2d3748; /* Default text color */
    }
    .bg-white {
      background-color: #ffffff; /* White background for form */
    }
    .text-gray-700 {
      color: #4a5568; /* Darker text color for labels */
    }
  </style>
</head>
<body class="bg-gray-100">

  <div class="flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md p-4">
      <!-- Dark/Light Mode Toggle Button -->
      <div class="flex justify-end mb-4">
        <button
          id="toggleMode"
          aria-label="Toggle Dark Mode"
          class="px-4 py-2 rounded-md bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition-colors duration-300"
        >
          Toggle Dark Mode
        </button>
        <a
          href="/read"
          aria-label="Read Users"
          class="ml-2 px-4 py-2 rounded-md bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition-colors duration-300"
        >
          Read Users
        </a>
      </div>

      <!-- User Form -->
      <form
        action="/update/<%=user._id%>   "
        method="post"
        class="bg-white p-8 rounded-lg shadow-md"
      >
        <h2 class="text-2xl font-bold mb-6 text-center dark:text-gray-100 text-gray-900">Edit  User</h2>

        <div class="mb-4">
          <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
            Name
          </label>
          <input
            type="text"

            value="<%=user.name%>"
            id="name"
            name="name"
            class="mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300"
            required
          />
        </div>

        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
            Email
          </label>

          <input
            type="email"
            value="<%=user.email%>"
            id="email"
            name="email"
            class="mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300"
            required
          />
        </div>

        <div class="mb-4">
          <label for="imgUrl" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
            Image URL
          </label>
          <input
            type="url"

            value="<%=user.image%>"
            id="imgUrl"
            name="image"
            class="mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300"
            required
          />
        </div>

        <button
          type="submit"
          class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition-colors duration-300"
        >
          Update User
        </button>
      </form>
    </div>
  </div>

  <script>
    // Dark/Light Mode Toggle Script
    const toggleButton = document.getElementById("toggleMode");
    const body = document.body;

    toggleButton.addEventListener("click", () => {
      body.classList.toggle("dark-mode");
    });
  </script>
</body>
</html>
